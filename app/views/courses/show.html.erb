<h1><%= @course.name %></h1>

<% if @course.sections.any? %>
  <% @course.sections.each do |section| %>
    <h4><%= link_to section.name, course_section_path(@course, section) %></h4>
  <% end %>
<% else %>
  <h4>This course has no sections.</h4>
<% end %>
<%= link_to 'Add a new Section', new_course_section_path(@course) %>
<hr>
<%= link_to 'Edit Course', edit_course_path %>
<%= link_to 'Delete Course', course_path(@course), :data => {:confirm => "Are you sure?", :method => "delete"} %>
<p><%= link_to "Return to Home", courses_path %></p>
